{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Currency rates</a>
    </nav>

    <div class="container-fluid">
        <div class="dropdown" style="padding: 20px 0 10px;">
            <a class="btn btn-secondary dropdown-toggle" href="/currency/get_rates" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Currency type
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                {% for currency in currencies %}
                    <a class="dropdown-item" href="/currency/get_rates/{{ currency.name }}">{{ currency.name }}</a>
                {% endfor %}
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/currency/get_rates">All currencies</a>
            </div>
        </div>

        <div class="row">
            <main class="col-sm-9 col-md-10 pt-3">

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Currency</th>
                                <th>Rate</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for rate in rates %}
                            <tr>
                                <td>{{ rate.name }}</td>
                                <td>{{ rate.rate }}</td>
                                <td>{{ rate.date }}</td>
                            </tr>
                        {% else %}
                            No rates have been found.
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

{% endblock %}
